<h1>Registrations#new</h1>
<p>Find me in app/views/registrations/new.html.erb</p>

<h3>Congrats! ###NAME### has extended you an invite to BakerMaker!</h3>

<%= form_for @user, url: register_create_path do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>

  <%= f.label :password %>
  <%= f.password_field :password %>
  Confirm: <%= f.password_field :password_confirmation %>
  <br>

  <%= f.hidden_field :invited_by_id, value: @invitee[:invited_by_id] %>

  <%= f.submit("Sign up") %>
<% end %>
